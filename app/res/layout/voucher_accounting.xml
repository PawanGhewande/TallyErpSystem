<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_bg1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="6dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:paddingRight="10dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="@android:color/white"
                android:text="Accounting Voucher"
                android:textSize="20sp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/transparentprofile"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:background="@drawable/transparentprofile"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/mainSpace"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:id="@+id/vouchertype"
                            android:fontFamily="@font/googlesans_regular"
                            android:gravity="left"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Prashant"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="voucherno"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            android:id="@+id/voucherno"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="date"
                                android:textColor="@color/common_google_signin_btn_text_light"
                                android:id="@+id/date"
                                android:textStyle="bold"
                                android:fontFamily="@font/googlesans_regular"
                                android:textSize="12dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainSpace"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/googlesans_regular"
                                android:id="@+id/partydetail"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/grey_90"
                                android:text="Party/Account Details"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/googlesans_regular"
                                android:id="@+id/partyname"
                                android:gravity="left"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/black"
                                android:text="  --  "/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainSpace"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textSize="15dp"
                                        android:fontFamily="@font/googlesans_regular"
                                        android:id="@+id/particular"
                                        android:gravity="left"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="@color/grey_90"
                                        android:text="Particular/Item "/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textSize="15dp"
                                        android:fontFamily="@font/googlesans_regular"
                                        android:id="@+id/title1"
                                        android:gravity="left"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="@color/grey_90"
                                        android:text="    Credit                Debit "/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/googlesans_regular"
                                        android:id="@+id/title2"
                                        android:gravity="left"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="@color/grey_90"
                                        android:text="   Qutt.       Rate       Amount"/>
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:id="@+id/itemlist"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:text="  --  "/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:fontFamily="@font/googlesans_regular"
                                android:id="@+id/startitem"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/black"
                                android:text="  --  "/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:fontFamily="@font/googlesans_regular"
                                android:id="@+id/middleitem"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/black"
                                android:text="    "/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:fontFamily="@font/googlesans_regular"
                                android:id="@+id/enditem"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/black"
                                android:text="  --  "/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text=""/>
                    </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainSpace"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:gravity="left"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/grey_90"
                            android:textStyle="bold"
                            android:text="Narration "/>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="10dp"
                         android:orientation="horizontal">
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:fontFamily="@font/googlesans_regular"
                            android:id="@+id/narration"
                            android:gravity="left"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:text="  --  "/>
                         <TextView
                             android:layout_width="140dp"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="5dp"
                             android:textSize="13dp"
                             android:fontFamily="@font/googlesans_regular"
                             android:id="@+id/narrationamount"
                             android:gravity="left"
                             android:layout_marginLeft="10dp"
                             android:textColor="@color/black"
                             android:text="  --  "/>
                     </LinearLayout>
                    </LinearLayout>
            </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
