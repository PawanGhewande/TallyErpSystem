<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleHover="true"
        app:mrl_rippleFadeDuration="60"
        app:mrl_rippleAlpha="0.3"
        app:mrl_rippleDuration="350"
        app:mrl_rippleColor="@color/Appcolor"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDelayClick="true">


        <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_marginTop="13dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_contacts"
                android:layout_marginLeft="2dp"
                android:background="@drawable/transparent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text="Name : "
                        android:textSize="13sp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80" />
                    <TextView
                        android:id="@+id/clientname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text=""
                        android:textSize="13sp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/Statusbar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:text="Opening Bal. : "
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80" />
                    <TextView
                        android:id="@+id/openingbalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/Statusbar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:text="Closing Bal. :  "
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80" />
                    <TextView
                        android:id="@+id/closingbalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/Statusbar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="Group : "
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_80" />
                    <TextView
                        android:id="@+id/group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="13sp"
                        android:text=""
                        android:fontFamily="@font/googlesans_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/Statusbar" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>