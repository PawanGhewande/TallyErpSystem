<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleHover="true"
        app:mrl_rippleFadeDuration="60"
        app:mrl_rippleAlpha="0.3"
        app:mrl_rippleDuration="350"
        app:mrl_rippleColor="@color/Appcolor"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDelayClick="true">


        <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/vouchername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prashant voucher"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/googlesans_regular"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vch no. : "
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/googlesans_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80" />

            <TextView
                android:id="@+id/voucherNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/googlesans_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/Statusbar" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80" />

                <TextView
                    android:id="@+id/voucherdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/Statusbar" />

            </LinearLayout>

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>